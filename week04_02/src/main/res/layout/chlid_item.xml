<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <CheckBox
        android:id="@+id/check_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/images"
        app:layout_constraintBottom_toBottomOf="@id/images"/>
    <ImageView
        android:id="@+id/images"
        android:layout_width="160dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/check_child"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/images"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="0dp"
        android:textColor="#f00"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/images"
        app:layout_constraintBottom_toBottomOf="parent"
       />
    <com.example.week04_02.view.AddSubView
        android:id="@+id/addsubview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       />
</android.support.constraint.ConstraintLayout>