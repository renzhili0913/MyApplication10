<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
   <ImageButton
       android:id="@+id/image_back"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:background="@drawable/ic_action_back"
       app:layout_constraintTop_toTopOf="@id/text_name"
       app:layout_constraintBottom_toBottomOf="@id/text_name"/>
    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购物车"
        android:textSize="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        android:background="#ccc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/num_all"/>
    <CheckBox
        android:id="@+id/select_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全选/反选"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/text_price_all"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/text_price_all"/>
    <TextView
        android:id="@+id/text_price_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="合计："
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/select_all"
        app:layout_constraintBottom_toBottomOf="@id/num_all"
        app:layout_constraintTop_toTopOf="@id/num_all"/>
    <TextView
        android:id="@+id/num_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/settlement_shape"
        android:text="去结算（0）"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>